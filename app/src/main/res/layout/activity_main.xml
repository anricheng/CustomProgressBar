<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="progressbar.example.aric.customprogressbar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <progressbar.example.aric.customprogressbar.customedProgressBar
            android:layout_width="match_parent"
            android:id="@+id/cp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:progress="0"
            cp:progress_text_size="20sp"
            />

        <progressbar.example.aric.customprogressbar.RoundProgress
            android:layout_width="match_parent"
            android:id="@+id/rp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:progress="0"
            cp:model="false"

            />



        </LinearLayout>>

</ScrollView>
